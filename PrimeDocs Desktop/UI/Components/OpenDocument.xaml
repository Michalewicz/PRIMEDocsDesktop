<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.OpenDocument"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border d:BorderBrush="YellowGreen" d:BorderThickness="2">

        <Grid>

            <Grid
                x:Name="grInitialWindowOpenDocument"
                Height="279"
                VerticalAlignment="Top">
                <TextBlock
                    x:Name="tbInitialWindowOpenDocument"
                    Width="780"
                    Height="35"
                    Margin="0,9,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Abrir Documentos"
                    TextWrapping="Wrap" />
                <Rectangle
                    x:Name="rtInitialWindowLineOpenDocument"
                    Height="2"
                    Margin="0,43,0,0"
                    VerticalAlignment="Top"
                    Stroke="#E5777777" />
                <Button
                    x:Name="btInitialWindowOpenDocumentCollapse"
                    Width="35"
                    Height="34"
                    Margin="0,9,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    d:BorderBrush="Gray"
                    d:BorderThickness="2"
                    Click="btInitialWindowOpenDocumentCollapse_Click">
                    <Image
                        Width="35"
                        Height="35"
                        Source="/Resources/Icons/InitialWindow/collapse.png" />
                </Button>

                <Grid x:Name="grInitialWindowOpenDocumentNew" Margin="10,50,10,-506">

                    <local:Placeholder
                        Height="20"
                        Margin="10,5,150,0"
                        VerticalAlignment="Top"
                        BorderBrush="Black"
                        BorderThickness="0.75"
                        FontFamily="Open Sans"
                        FontSize="13"
                        PlaceholderText="Digite o nome do documento" />
                    <Button
                        Width="135"
                        Height="20"
                        Margin="0,5,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#FFE6E6E6"
                        BorderBrush="Black"
                        BorderThickness="0.5"
                        Content="Abrir..." />

                    <TextBlock
                        x:Name="tbInitialWindowOpenDocumentFilter"
                        Width="687"
                        Height="22"
                        Margin="10,44,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="Open Sans"
                        FontSize="19"
                        FontWeight="Bold"
                        Text="Filtros de pesquisa"
                        TextWrapping="Wrap" />
                    <Rectangle
                        x:Name="rtInitialWindowLineOpenDocumentFilter"
                        Height="2"
                        Margin="10,70,10,0"
                        VerticalAlignment="Top"
                        Stroke="#E5777777" />
                    <Button
                        x:Name="btInitialWindowOpenDocumentCollapseFilter"
                        Width="35"
                        Height="35"
                        Margin="0,35,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        d:BorderBrush="Gray"
                        d:BorderThickness="2"
                        Click="btInitialWindowOpenDocumentCollapseFilter_Click">
                        <Image
                            Width="35"
                            Height="35"
                            Source="/Resources/Icons/InitialWindow/collapse.png" />
                    </Button>
                    <Grid x:Name="grInitialWindowOpenDocumentFilter" Visibility="Collapsed">
                        <local:SearchFilter
                            Height="300"
                            Margin="0,75,0,0"
                            VerticalAlignment="Top" />
                    </Grid>
                </Grid>

            </Grid>

        </Grid>

    </Border>
</UserControl>
