<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.Placeholder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="tbxPlaceholder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TextChanged="tbxPlaceholder_TextChanged"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="tbPlaceholder"
            Margin="5,0,0,0"
            VerticalAlignment="Center"
            Foreground="DimGray"
            IsHitTestVisible="False"
            Text="{Binding PlaceholderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
