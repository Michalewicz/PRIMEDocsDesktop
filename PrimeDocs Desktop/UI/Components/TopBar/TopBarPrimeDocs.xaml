<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.TopBarPrimeDocs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="35"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        x:Name="TopBarBorder"
        Background="#001BC9"
        ClipToBounds="True"
        CornerRadius="7">

        <DockPanel Height="35" LastChildFill="True" Background="Transparent">

            <!-- Ícone -->
            <local:Home
                HorizontalAlignment="Left"
                d:BorderBrush="Red"
                d:BorderThickness="2"
                DockPanel.Dock="Left" />

            <!-- Título -->
            <TextBlock
                Name="tbTopBarTitle"
                VerticalAlignment="Center"
                FontFamily="Open Sans"
                FontSize="20"
                Foreground="White"
                Text="Title"
                TextWrapping="Wrap"
                DockPanel.Dock="Left" Width="420" />

            <!-- Botões da Janela (Direita) -->
            <local:WindowControl
                x:Name="windowControlTopBar"
                Width="155"
                Height="35"
                MinWidth="155"
                VerticalAlignment="Top"
                DockPanel.Dock="Right"
                d:BorderBrush="Red"
                d:BorderThickness="2" />

            <!-- Menu do Usuário (Direita, antes dos botões) -->
            <local:UserMenu
                x:Name="userMenuTopBar"
                VerticalAlignment="Center"
                Margin="0,0,5,0"
                DockPanel.Dock="Right"
                d:BorderBrush="Red"
                d:BorderThickness="2" />

        </DockPanel>
    </Border>
</UserControl>
