<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.TopBarPrimeDocs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="35"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        x:Name="TopBarBorder"
        Background="#001BC9"
        ClipToBounds="True"
        CornerRadius="7">

        <DockPanel
            Height="35"
            Background="Transparent"
            LastChildFill="True">

            <!--  Ícone Home  -->
            <local:Home
                x:Name="btInitialWindowHome"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                d:BorderBrush="Red"
                d:BorderThickness="2"
                DockPanel.Dock="Left" />

            <!--  Título  -->
            <TextBlock
                Name="tbTopBarTitle"
                Width="420"
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                FontFamily="Open Sans"
                FontSize="20"
                Foreground="White"
                Text="Title"
                TextWrapping="Wrap" />

            <!--  Botões da Janela (Direita)  -->
            <local:WindowControl
                x:Name="windowControlTopBar"
                Width="155"
                Height="35"
                MinWidth="155"
                VerticalAlignment="Top"
                d:BorderBrush="Red"
                d:BorderThickness="2"
                DockPanel.Dock="Right" />
            <!--  Menu do Usuário (Direita, antes dos botões)  -->
            <local:UserMenu
                x:Name="userMenuTopBar"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                d:BorderBrush="Red"
                d:BorderThickness="2"
                DockPanel.Dock="Right" />

        </DockPanel>
    </Border>
</UserControl>
