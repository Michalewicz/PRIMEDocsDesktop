<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.TopBarPrimeDocs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="35"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        x:Name="TopBarBorder"
        Background="#001BC9"
        ClipToBounds="True"
        CornerRadius="7">
        <Grid
            Height="35"
            VerticalAlignment="Top"
            Background="Transparent"
            ClipToBounds="True">
            <TextBlock
                Name="tbTopBarTitle"
                Margin="37,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Open Sans"
                FontSize="20"
                Foreground="White"
                Text="Title"
                TextWrapping="Wrap" />
            <local:UserMenu
                Margin="286,0,155,0"
                HorizontalAlignment="Right"
                d:BorderBrush="Red"
                d:BorderThickness="2" />
            <local:WindowControl
                x:Name="windowControlTopBar"
                Width="155"
                Height="35"
                MinWidth="155"
                Margin="630,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                d:BorderBrush="Red"
                d:BorderThickness="2" />
            <Image
                Width="17"
                Height="25"
                Margin="10,5,0,5"
                HorizontalAlignment="Left"
                RenderTransformOrigin="-1.844,-8.906"
                Source="/Resources/Icons/InitialWindow/PrimeDocsBar.png"
                Stretch="Fill" />
        </Grid>
    </Border>

</UserControl>
