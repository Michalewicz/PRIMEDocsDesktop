<UserControl x:Class="PrimeDocs_Desktop.UI.Components.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
             mc:Ignorable="d">
    <Grid>
        <Button Focusable="False"
                Style="{StaticResource WindowControlButtonStyle}"
                MinWidth="120"
                MinHeight="35"
                Click="btInitialWindowProfile_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                ToolTip="Perfil">
            <Grid>
                <TextBlock Text="Nome"
                           FontFamily="Open Sans"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,40,0" HorizontalAlignment="Right"/>
                <Image MaxHeight="30" MaxWidth="30" Source="/Resources/Icons/InitialWindow/profile.png" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-0,0"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
