        <Button Focusable="False" Style="{StaticResource WindowControlButtonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Click="btInitialWindowConfig_Click" ToolTip="Configurações" MinHeight="35" MaxHeight="35" MaxWidth="35" MinWidth="35">
