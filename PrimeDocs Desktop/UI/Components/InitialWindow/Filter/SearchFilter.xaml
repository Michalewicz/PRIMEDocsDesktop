<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.SearchFilter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border d:Background="White">
        <ScrollViewer>
            <Grid>
                <TextBlock
                    Width="687"
                    Height="22"
                    Margin="10,19,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Local do Documento"
                    TextWrapping="Wrap" />
                <Rectangle
                    Height="2"
                    Margin="10,37,10,0"
                    VerticalAlignment="Top"
                    Stroke="#E5777777" />
                <CheckBox
                    Margin="19,62,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Local"
                    FontFamily="Open Sans"
                    FontSize="13" />
                <CheckBox
                    Margin="148,62,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Nuvem"
                    FontFamily="Open Sans"
                    FontSize="13" />

                <TextBlock
                    Width="687"
                    Height="22"
                    Margin="10,100,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Extensão do Documento"
                    TextWrapping="Wrap" />
                <Rectangle
                    Height="2"
                    Margin="10,118,10,0"
                    VerticalAlignment="Top"
                    Stroke="#E5777777" />
                <CheckBox
                    Margin="19,142,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content=".doc"
                    FontFamily="Open Sans"
                    FontSize="13" />
                <CheckBox
                    Margin="148,142,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content=".docx"
                    FontFamily="Open Sans"
                    FontSize="13" />
                <CheckBox
                    Margin="299,142,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content=".txt"
                    FontFamily="Open Sans"
                    FontSize="13" />
                <CheckBox
                    Margin="456,142,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content=".md"
                    FontFamily="Open Sans"
                    FontSize="13" />

                <TextBlock
                    Width="687"
                    Height="22"
                    Margin="10,179,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Data de Criação"
                    TextWrapping="Wrap" />
                <Rectangle
                    Height="2"
                    Margin="10,198,10,0"
                    VerticalAlignment="Top"
                    Stroke="#E5777777" />
                <ComboBox
                    x:Name="cbSearchMode"
                    Margin="19,211,0,0"
                    VerticalAlignment="Top"
                    SelectionChanged="cbSearchMode_SelectionChanged" HorizontalAlignment="Left" Width="328">
                    <ComboBoxItem Content="Data exata" />
                    <ComboBoxItem Content="Intervalo de Datas" />
                </ComboBox>
                <local:SearchByDate
                    x:Name="SearchDate"
                    Width="800"
                    Height="50"
                    Margin="0,247,0,153"
                    HorizontalAlignment="Left"
                    Visibility="Visible" />
                <local:SeachByDateRange
                    x:Name="SearchRange"
                    Width="800"
                    Height="50"
                    Margin="0,247,0,153"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed" />

                <TextBlock
                    Width="687"
                    Height="22"
                    Margin="10,311,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Nome do Arquivo"
                    TextWrapping="Wrap" />
                <Rectangle
                    Height="2"
                    Margin="10,329,10,0"
                    VerticalAlignment="Top"
                    Stroke="#E5777777" />
                <TextBlock
                    Height="23"
                    Margin="19,347,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="13"
                    TextWrapping="Wrap" ><Run Text="Cont"/><Run Language="pt-br" Text="êm"/><Run Text="/Começa/Termina com :"/></TextBlock>
                <local:Placeholder
                    Width="304"
                    Margin="221,347,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    PlaceholderText="Ex: a*/*a*/*a" />
            </Grid>
        </ScrollViewer>
    </Border>

</UserControl>
