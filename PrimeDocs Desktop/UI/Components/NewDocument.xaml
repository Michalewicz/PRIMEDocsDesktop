<UserControl
    x:Class="PrimeDocs_Desktop.UI.Components.NewDocument"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="283"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Height="284" VerticalAlignment="Top">
        <Grid
            x:Name="grInitialWindowDocumentCreation"
            Height="279"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*" />
                <ColumnDefinition Width="781*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="tbInitialWindowDocumentCreation"
                Grid.ColumnSpan="2"
                Width="780"
                Margin="0,10,0,234"
                HorizontalAlignment="Left"
                FontFamily="Open Sans"
                FontSize="25"
                Text="Criação de Documentos"
                TextWrapping="Wrap" FontWeight="Bold" />
            <Rectangle
                x:Name="rtInitialWindowLineDocument"
                Grid.ColumnSpan="2"
                Height="2"
                Margin="0,44,0,0"
                VerticalAlignment="Top"
                Stroke="#E5777777" />
            <Grid
                x:Name="grInitialWindowDocumentCreationNew"
                Grid.ColumnSpan="2"
                Height="230"
                Margin="10,50,10,0"
                VerticalAlignment="Top">
                <TextBlock
                    x:Name="tbInitialWindowDocumentA4"
                    Width="130"
                    Height="39"
                    Margin="10,180,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Novo documento A4"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="btInitialWindowDocumentA4"
                    Width="130"
                    Height="170"
                    Margin="10,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    d:BorderBrush="Gray"
                    d:BorderThickness="2"
                    BorderBrush="{x:Null}"
                    Click="btInitialWindowDocumentA4_Click"
                    Content="/Resources/Icons/InitialWindow/A4.png"
                    Style="{StaticResource DocumentButtonStyle}" />

                <TextBlock
                    x:Name="tbInitialWindowDocumentText"
                    Width="130"
                    Height="40"
                    Margin="170,180,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Novo documento de texto"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="btInitialWindowDocumentText"
                    Width="130"
                    Height="170"
                    Margin="170,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    d:BorderBrush="Gray"
                    d:BorderThickness="2"
                    BorderBrush="{x:Null}"
                    Click="btInitialWindowDocumentText_Click"
                    Content="/Resources/Icons/InitialWindow/TXT.png"
                    Style="{StaticResource DocumentButtonStyle}" />

                <TextBlock
                    x:Name="tbInitialWindowDocumentMD"
                    Width="130"
                    Height="40"
                    Margin="330,180,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Open Sans"
                    FontSize="15"
                    Text="Novo documento MarkDown"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="btInitialWindowDocumentMD"
                    Width="130"
                    Height="170"
                    Margin="330,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    d:BorderBrush="Gray"
                    d:BorderThickness="2"
                    BorderBrush="{x:Null}"
                    Click="btInitialWindowDocumentMD_Click"
                    Content="/Resources/Icons/InitialWindow/MD.png"
                    Style="{StaticResource DocumentButtonStyle}" />
            </Grid>
            <Button
                x:Name="btInitialWindowDocumentCreationCollapse"
                Grid.Column="1"
                Width="35"
                Height="34"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                d:BorderBrush="Gray"
                d:BorderThickness="2"
                Click="btInitialWindowDocumentCreationCollapse_Click"
                Cursor="Hand">
                <Image
                    Width="35"
                    Height="35"
                    Source="/Resources/Icons/InitialWindow/collapse.png" />
            </Button>
        </Grid>
    </Grid>
</UserControl>
