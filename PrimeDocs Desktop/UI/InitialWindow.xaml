<Window x:Class="PrimeDocs_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimeDocs_Desktop"
        mc:Ignorable="d"
        Icon="/Resources/Icons/PrimeDocs.ico"
        Title="PrimeDocs" Height="600" Width="800" WindowState="Maximized" MinHeight="600" MinWidth="700"
        SizeChanged="Window_SizeChanged"
        WindowStyle="None" AllowsTransparency="True" Background="White">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <StackPanel Background="#FFB7B7B7">
            <Border x:Name="brInitialWindowTopBar" Background="#FF0003DC" CornerRadius="0,0,15,15" Padding="10" MouseDown="brInitialWindowTopBar_MouseDown">
                <Grid x:Name="grInitialWindowTopBar" Height="50" Background="#FF0003DC">
                    <TextBlock x:Name="tbInitialWindowTopTitle" TextWrapping="Wrap" Text="Início" TextAlignment="Center" Margin="10,0,0,0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="25" Height="30"/>
                    <Grid Margin="0,2,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="511">
                        <TextBlock x:Name="tbInitialWindowName" TextWrapping="Wrap" Text="Nome" TextAlignment="Right" Foreground="White" FontSize="25" Margin="0,10,269,10"/>
                        <Button x:Name="btInitialWindowProfile" Style="{StaticResource ProfileConfigButtonStyle}" HorizontalAlignment="Left" Margin="267,0,0,0" VerticalAlignment="Center" Height="30" Width="30" BorderBrush="{x:Null}" Click="btInitialWindowProfile_Click" Padding="20,20,20,20" RenderTransformOrigin="0.514,0.588" Grid.IsSharedSizeScope="True">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/profile.png" Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btInitialWindowConfig" Style="{StaticResource ProfileConfigButtonStyle}" HorizontalAlignment="Left" Margin="316,0,0,0" VerticalAlignment="Center" Height="30" Width="30" BorderBrush="{x:Null}" Click="btInitialWindowConfig_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/config.png" Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btInitialWindowMinimize" HorizontalAlignment="Left" Margin="392,12,0,0" VerticalAlignment="Top" Height="30" Width="30" BorderBrush="{x:Null}" Click="btInitialWindowMinimize_Click" Foreground="{x:Null}">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/minus.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btInitialWindowMaximize" HorizontalAlignment="Left" Margin="432,12,0,0" VerticalAlignment="Top" Height="30" Width="30" BorderBrush="{x:Null}" Click="btInitialWindowMaximize_Click">
                            <Button.Background>
                                <ImageBrush x:Name="imgMaximize" ImageSource="/Resources/Icons/InitialWindow/minimize.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btInitialWindowClose" Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Left" Margin="476,16,0,0" VerticalAlignment="Top" Height="22" Width="22" BorderBrush="{x:Null}" Click="btInitialWindowClose_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/close.png"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

        </StackPanel>
        <Button x:Name="btInitialWindowDocumentA4" Style="{StaticResource DocumentButtonStyle}" Margin="10,122,0,0" Click="btInitialWindowDocumentA4_Click" HorizontalAlignment="Left" Width="130" Height="170" VerticalAlignment="Top" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/A4.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="tbInitialWindowDocumentCreation" TextWrapping="Wrap" Text="Criação de Documentos" Margin="10,75,0,0" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="780"/>
        <Rectangle x:Name="rtInitialWindowLineDocument" Height="2" Margin="10,109,10,0" Stroke="#FF797979" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbInitialWindowDocumentA4" TextWrapping="Wrap" TextAlignment="Center" Text="Novo documento A4" Margin="10,297,0,0" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="130"/>
        <Button x:Name="btInitialWindowDocumentText" Style="{StaticResource DocumentButtonStyle}" Margin="180,122,0,0" Click="btInitialWindowDocumentText_Click" HorizontalAlignment="Left" Width="130" Height="170" VerticalAlignment="Top" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/TXT.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="tbInitialWindowDocumentText" TextWrapping="Wrap" TextAlignment="Center" Text="Novo documento de texto" Margin="180,297,0,0" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="130"/>
        <Button x:Name="btInitialWindowDocumentMD" Style="{StaticResource DocumentButtonStyle}" Margin="350,122,0,0" Click="btInitialWindowDocumentMD_Click" HorizontalAlignment="Left" Width="130" Height="170" VerticalAlignment="Top" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Icons/InitialWindow/MD.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="tbInitialWindowDocumentMD" TextWrapping="Wrap" TextAlignment="Center" Text="Novo documento MarkDown" Margin="350,297,0,0" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="130"/>
        <Button x:Name="btInitialWindowDocumentCreationDropDown" Content="Button" Margin="0,75,10,0" Click="btInitialWindowDocumentCreationDropDown_Click" Height="34" VerticalAlignment="Top" HorizontalAlignment="Right" Width="35"/>

    </Grid>
</Window>
