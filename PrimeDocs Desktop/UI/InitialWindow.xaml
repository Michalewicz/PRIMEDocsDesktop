<Window
    x:Class="PrimeDocs_Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:PrimeDocs_Desktop.UI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PrimeDocs"
    Width="818"
    Height="800"
    MinWidth="800"
    MinHeight="800"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Resources/Icons/PrimeDocs.png"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="7"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border
        x:Name="MainBorder"
        Background="White"
        BorderBrush="#001BC9"
        BorderThickness="2"
        ClipToBounds="True"
        CornerRadius="13">

        <Grid>
            <Border
                x:Name="SecondaryBorder"
                Background="White"
                CornerRadius="15">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <components:TopBarPrimeDocs
                        x:Name="tbpInitialWindowTopBar"
                        Grid.Row="0"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top" />


                    <ScrollViewer
                        x:Name="scrollViewer"
                        Grid.Row="1"
                        Padding="0"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">

                        <StackPanel>
                            <components:NewDocument
                                x:Name="newDocumentControl"
                                Padding="25,0,25,0"
                                d:BorderBrush="Gray"
                                d:BorderThickness="2" />

                            <components:OpenDocument
                                x:Name="openDocumentControl"
                                Height="475"
                                Padding="25,0,25,0"
                                d:BorderBrush="Gray"
                                d:BorderThickness="2" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
